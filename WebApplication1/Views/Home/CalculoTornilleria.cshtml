                            <div class="row">
                                <div class="col-12">
                                    <button type="button" class="btn btn-primary btn-block btn_agregar_valores" data-toggle="collapse" href="#collapse_@contador" role="button" aria-expanded="false" aria-controls="collapse_@contador">
