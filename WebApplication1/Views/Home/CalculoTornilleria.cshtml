                                        <div class="col-12 mt-2">
                                            <button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#exampleModal"
                                                    onclick="llenarModal('@grupo.NombreGrupo',@contador,@grupo.IdPerfil, '@grupo.NombrePerfil')"
